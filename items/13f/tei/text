               <name xml:id="tag193" type="place">
          France 
        </name>
            </rs>(before the Revolution) &amp; <rs xmlns:conf="https://www.lancaster.ac.uk/library/ns/digital-library/config/1.0"
                xml:id="ttag194"
                ref="#place_475"
