               <rs xml:id="ttag9" ref="#chemical_104" type="chemical">
                  <term xml:id="tag9">
          feldspar
          
        </term>
               </rs>
            </hi> and<lb/>
            <rs xmlns:conf="https://www.lancaster.ac.uk/library/ns/digital-library/config/1.0"
                xml:id="ttag10"
                ref="#chemical_101"
                type="chemical">
               <term xml:id="tag10">
