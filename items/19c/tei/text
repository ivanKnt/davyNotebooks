                xml:id="ttag122"
                ref="#place_1135"
                type="place">
               <name xml:id="tag122" type="place">
          Alexandria
        </name>
            </rs> that <rs xmlns:conf="https://www.lancaster.ac.uk/library/ns/digital-library/config/1.0"
                xml:id="ttag123"
                ref="#person_861"
                type="person">
               <name xml:id="tag123" type="person">
          Euclid
        </name>
            </rs> collected&#xD;<lb/>
and improved the <rs xmlns:conf="https://www.lancaster.ac.uk/library/ns/digital-library/config/1.0"
                xml:id="ttag124"
                ref="#otherwork_085"
                type="otherwork">
               <bibl xml:id="tag124">
            elements of Mathematics
        </bibl>
            </rs> that&#xD;<lb/>
