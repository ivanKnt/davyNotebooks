#!/bin/bash

items=( 01a1 01a2 01a3 01a4 01a5 01a6 01a7 02a1 02b1 02b2 02c1 02c2 02c3 02c4
        02d1 02d2 02d3 02d4 02d5 03a1 03a2 03a3 03a4 03a5 03a6 03a7 03a8 03a9
        03b1 03b10 03b2 03b3 03b4 03b5 03b6 03b7 03b8 03b9 04a1 04a2 04a3 04a4
        04a5 04a6 04a7 04b1 04b2 04b3 04b4 04b5 04b6 04b7 04b8 04c1 04c2 06 07
        07a 08a 10 11 12 13a 13b 13c 13d 13e 13f 13g 13h 13i 13j 14a 14b 14c
        14d 14f 14g 14h 14j 14k 14l 14m 15a 15b 15c 15d 15g 15h
        15i 15j 16a 16b 16c 16d 16e 16f 17a 17b 17c 17d 17e 17f 18a 18b 18c 18d
        18e 19a 19b 19c 19d 19e 19f 20a 20b 21a 21b 21c 21d 22a 22b 22c
        gs61 gs62 gs63 gs64 gs65 )

in_progress=( 08 14e 14i 15e 15f 20c )

pushd /media/andy/T7Shield/digital-collections/content-davy/items >>/dev/null \
    || exit 1

unset echo
[[ "$1" == "-n" ]] && echo=echo

if [[ "$1" == "-t" ]]; then
    for item in ${items[@]}; do
        transcription-html davy ${item}
        transcription-deploy davy ${item}
    done
else
    for item in ${items[@]}; do
        ${echo} tei davy ${item}
        ${echo} t ${item}
    done
fi

popd >>/dev/null
